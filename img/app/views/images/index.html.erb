<h1>Listing images</h1>

<div id="public_pics">
<h1>Public Pictures</h1>
<table>
  <thead>
    <tr>
      <th>Filename</th>
      <th>Public</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @pub_images = Image.where(:public => TRUE) %>
    <% @pub_images.each do |image| %>
      <tr>
        <td><%= image_tag root_url + "/images/" + image.filename, size: "100x100", alt: image.filename %></td>
        <td><%= image.public %></td>
        <td><%= image.user.email %></td>
        <td><%= link_to 'Show', image %></td>
        <% if( current_user ) %>
        <% if( image.user == current_user.id) %>
          <td><%= link_to 'Edit', edit_image_path(image) %></td>
          <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<% if( current_user ) %>
